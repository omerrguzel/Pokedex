<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageIcon"
        android:layout_width="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/textValue"
        app:tint="@color/dark_grayscale"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_weight"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageIcon"
        tools:text="6,9 kg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="9dp"
        style="@style/PokeText.Body.Body3"
        android:textColor="@color/dark_grayscale"
        app:layout_constraintBottom_toBottomOf="@id/imageIcon"
        app:layout_constraintStart_toEndOf="@id/imageIcon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageIcon"
        android:text="@string/weight"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="8dp"
        style="@style/PokeText.Body.Caption"
        android:textColor="@color/medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="1dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:dividerColor="@color/light"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
